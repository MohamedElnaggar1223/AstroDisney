---
import { getImagePath } from '@/lib/getImagePath';
import type { Movie } from '@/typings'
import { Image } from "astro:assets";

type Props = {
    movie: Movie
}

const { movie }: Props = Astro.props

---
<div draggable="true" class="flex z-[9999999]">
    <a href={`/movie/${movie.id}`}>
        <div class='flex relative flex-shrink-0 cursor-pointer transform hover:scale-105 transition duration-200 hover:drop-shadow-lg'>
            <div class='absolute inset-0 bg-gradient-to-b from-gray-200/0 via-gray-900/10 to-gray-300 dark:to-[#1A1C29]/80 z-10' />
            <p class='absolute z-20 bottom-5 left-5'>{movie.title}</p>
    
            <div class="flex">
                <Image
                    src={getImagePath(movie.backdrop_path || movie.poster_path)}
                    alt={movie.title} 
                    width={1920}
                    height={1080}
                    class='w-fit lg:min-w-[400px] h-56 object-cover object-center shadow-md shadow-gray-900 drop-shadow-xl rounded-sm'
                    transition:name={`movie-${movie.id}`}
                />
            </div>
        </div>
    </a>
</div>